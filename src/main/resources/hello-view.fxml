<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="600.0" prefWidth="800.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.HelloController">
   <children>
      <GridPane alignment="CENTER" hgap="3.0" scaleX="0.7" scaleY="0.7" vgap="3.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <VBox fx:id="cardGestionUtilisateur" onMouseClicked="#onClickCardGestionUtilisateur" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="card">
               <children>
                  <ImageView fitHeight="250.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@images/magicstudio-art.jpg" />
                     </image>
                  </ImageView>
                  <Label text="gestion utilisateurs">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
             <VBox fx:id="cardGestionEquipe" onMouseClicked="#onClickCardGestionEquipe" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="card" GridPane.columnIndex="1">
                 <children>
                     <ImageView fitHeight="250.0" pickOnBounds="true" preserveRatio="true">
                         <image>
                             <Image url="@images/magicstudio-art4.jpg" />
                         </image>
                     </ImageView>
                     <Label text="gestion equipes">
                         <font>
                             <Font size="24.0" />
                         </font>
                     </Label>
                 </children>
             </VBox>

             <VBox fx:id="cardGestionInstEq" onMouseClicked="#onClickCardGestionInstEq" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="card_" GridPane.rowIndex="1">
                 <children>
                     <ImageView fitHeight="250.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" styleClass="card">
                         <image>
                             <Image url="@images/magicstudio-art5.jpg" />
                         </image>
                     </ImageView>
                     <Label text="gestion Installations et Equipement">
                         <font>
                             <Font size="24.0" />
                         </font>
                     </Label>
                 </children>
             </VBox>

             <VBox fx:id="cardGestionTournoisMatch" onMouseClicked="#onClickCardGestionTournoisMatch" alignment="CENTER" prefHeight="200.0" prefWidth="100.0" styleClass="card_" GridPane.columnIndex="1" GridPane.rowIndex="1">
                 <children>
                     <ImageView fitHeight="250.0" pickOnBounds="true" preserveRatio="true">
                         <image>
                             <Image url="@images/magicstudio-art3.jpg" />
                         </image>
                     </ImageView>
                     <Label text="gestion Tournois et matchs">
                         <font>
                             <Font size="24.0" />
                         </font>
                     </Label>
                 </children>
             </VBox>

         </children>
      </GridPane>

   </children>
</StackPane>
